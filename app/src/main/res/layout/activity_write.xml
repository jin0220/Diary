<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/date_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="날짜"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="▼"
                    android:textSize="20dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/title"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="제목을 입력해주세요." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />
                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />
                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />
                <ImageView
                    android:id="@+id/photo4"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />
                <ImageView
                    android:id="@+id/photo5"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo6"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />
                <ImageView
                    android:id="@+id/photo7"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />
                <ImageView
                    android:id="@+id/photo8"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />
                <ImageView
                    android:id="@+id/photo9"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />
                <ImageView
                    android:id="@+id/photo10"
                    android:layout_width="74dp"
                    android:layout_height="74dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/gallery"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn2_pressed"
                    android:text="갤러리"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/camera"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn1_pressed"
                    android:text="사진촬영"
                    android:textColor="#fff" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn2_pressed"
                    android:text="동영상"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <EditText
                android:id="@+id/content"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:gravity="top"
                android:hint="내용을 입력해 주세요"
                android:inputType="textMultiLine"
                android:minHeight="370dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn2_pressed"
                    android:text="취소"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/store"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn1_pressed"
                    android:text="저장"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>