<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 입력"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_weight="1">
            <requestFocus/>
        </EditText>

        <EditText
            android:id="@+id/password2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/password3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/password4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <Button
                    android:id="@+id/num1"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="1"/>

                <Button
                    android:id="@+id/num2"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="2"/>

                <Button
                    android:id="@+id/num3"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="3"/>

            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/num4"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="4"/>

                <Button
                    android:id="@+id/num5"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="5"/>

                <Button
                    android:id="@+id/num6"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="6"/>

            </TableRow>
            <TableRow>

                <Button
                    android:id="@+id/num7"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="7"/>

                <Button
                    android:id="@+id/num8"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="8"/>

                <Button
                    android:id="@+id/num9"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="9"/>

            </TableRow>
            <TableRow>

                <Button
                    android:id="@+id/clear"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="c"/>

                <Button
                    android:id="@+id/num0"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="0"/>

                <Button
                    android:id="@+id/delete_key"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="00"/>

            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>